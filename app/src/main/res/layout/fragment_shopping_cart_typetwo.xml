<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_currentRule"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/view_selector"
    android:orientation="horizontal"
    android:padding="10dp">

    <TextView
        android:id="@+id/tv_activityTypeStr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_red_circular"
        android:paddingBottom="5dp"
        android:paddingEnd="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:text="活动标签"
        android:textColor="@color/colorTitle" />

    <TextView
        android:id="@+id/tv_currentRuleStr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/tv_activityTypeStr"
        android:layout_toRightOf="@id/tv_activityTypeStr"
        android:ellipsize="end"
        android:lines="1"
        android:paddingBottom="5dp"
        android:paddingEnd="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:text="活动规则"
        android:textColor="@color/colorTitle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:drawableEnd="@mipmap/car_enter"
        android:drawablePadding="5dp"
        android:drawableRight="@mipmap/car_enter"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:lines="1"
        android:text="去凑单"
        android:textColor="@color/colorTitle" />
</RelativeLayout>