<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#f5f5f5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/view_selector"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cb_webGoodsSource"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:button="@null"
            android:drawableLeft="@drawable/bg_checkbox_one"
            android:drawableStart="@drawable/bg_checkbox_one"
            android:padding="5dp" />

        <CheckBox
            android:id="@+id/cb_del_webGoodsSource"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:button="@null"
            android:drawableLeft="@drawable/bg_checkbox_one"
            android:drawableStart="@drawable/bg_checkbox_one"
            android:padding="5dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_send_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/icon_locate"
            android:drawablePadding="5dp"
            android:drawableStart="@mipmap/icon_locate"
            android:text="发货地"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>